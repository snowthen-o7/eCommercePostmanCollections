					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response time is acceptable', function () {",
									"    pm.expect(pm.response.responseTime).to.be.below(5000);",
									"});",
									"",
									"pm.test('Response is valid JSON', function () {",
									"    pm.response.to.be.json;",
									"});",
									"",
									"// Extract first product and variant IDs for subsequent tests",
									"try {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.length > 0) {",
									"        const firstProduct = response.data[0];",
									"        pm.environment.set('bigcommerce_product_id', firstProduct.id);",
									"        console.log('Extracted product_id:', firstProduct.id);",
									"        ",
									"        if (firstProduct.variants && firstProduct.variants.length > 0) {",
									"            pm.environment.set('bigcommerce_variant_id', firstProduct.variants[0].id);",
									"            console.log('Extracted variant_id:', firstProduct.variants[0].id);",
									"        }",
									"    }",
									"} catch(e) { console.log('Error extracting IDs:', e); }"
								]
							}
						}
					]
