								"key": "X-Auth-Token",
								"value": "{{bigcommerce_token}}",
								"type": "text"
							},
							{
								"key": "X-Auth-Client",
								"value": "{{bigcommerce_client_id}}",
								"type": "text"
							},
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "https://api.bigcommerce.com/stores/{{bigcommerce_store_hash}}/v2/store",
							"protocol": "https",
							"host": ["api", "bigcommerce", "com"],
							"path": ["stores", "{{bigcommerce_store_hash}}", "v2", "store"]
						},
						"description": "Get store profile and settings"
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response time is acceptable', function () {",
									"    pm.expect(pm.response.responseTime).to.be.below(5000);",
									"});",
									"",
									"pm.test('Response has store data', function () {",
									"    const response = pm.response.json();",
									"    pm.expect(response).to.have.property('id');",
