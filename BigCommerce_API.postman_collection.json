					"    platform: 'bigcommerce'",
					"};",
					"pm.variables.set('_config', JSON.stringify(CONFIG));",
					"",
					"// Variable validation helper",
					"function requireVariable(varName, skipOnMissing = true) {",
					"    const value = pm.variables.get(varName);",
					"    const isSet = value && value.toString().trim() !== '' && !value.startsWith('xxxx') && !value.includes('abc123');",
					"    if (!isSet && skipOnMissing) {",
					"        console.log(`Skipping: ${varName} not set`);",
					"        pm.execution.skipRequest();",
					"    }",
					"    return isSet;",
					"}",
					"pm.variables.set('_requireVariable', requireVariable.toString());",
					"",
					"// Skip request if required BigCommerce credentials are not configured",
					"const storeHash = pm.variables.get('bigcommerce_store_hash');",
					"const token = pm.variables.get('bigcommerce_token');",
					"const clientId = pm.variables.get('bigcommerce_client_id');",
					"",
					"const hasStoreHash = storeHash && storeHash.trim() !== '' && !storeHash.includes('abc123');",
					"const hasToken = token && token.trim() !== '' && !token.startsWith('xxxx');",
					"const hasClientId = clientId && clientId.trim() !== '' && !clientId.startsWith('xxxx');",
					"",
					"if (!hasStoreHash || !hasToken || !hasClientId) {",
					"    console.log('Skipping: BigCommerce credentials not configured');",
					"    console.log('   Set bigcommerce_store_hash, bigcommerce_token, and bigcommerce_client_id to run this test');",
					"    pm.execution.skipRequest();",
					"}",
					"",
					"pm.environment.set('request_timestamp', new Date().toISOString());"
				]
			}
