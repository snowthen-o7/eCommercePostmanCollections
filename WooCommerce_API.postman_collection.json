				"exec": [
					"// Skip request if required WooCommerce credentials are not configured",
					"const storeUrl = pm.variables.get('woo_store_url');",
					"const consumerKey = pm.variables.get('woo_consumer_key');",
					"const consumerSecret = pm.variables.get('woo_consumer_secret');",
					"",
					"const hasStoreUrl = storeUrl && storeUrl.trim() !== '' && !storeUrl.includes('your-store');",
					"const hasConsumerKey = consumerKey && consumerKey.trim() !== '' && !consumerKey.startsWith('ck_xxxx');",
					"const hasConsumerSecret = consumerSecret && consumerSecret.trim() !== '' && !consumerSecret.startsWith('cs_xxxx');",
					"",
					"if (!hasStoreUrl || !hasConsumerKey || !hasConsumerSecret) {",
					"    console.log('⏭️ Skipping: WooCommerce credentials not configured');",
					"    console.log('   Set woo_store_url, woo_consumer_key, and woo_consumer_secret to run this test');",
					"    pm.execution.skipRequest();",
					"}",
					"",
					"// Set timestamp for request tracking",
					"pm.environment.set('request_timestamp', new Date().toISOString());"
				]
			}
